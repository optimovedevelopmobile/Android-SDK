<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="com.optimove.sdk.optimovemobilesdk.MainActivity">

    <TextView
        android:id="@+id/userIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:text="Welcome to the Optimove Android SDK test"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.437"/>

    <Button
        android:id="@+id/reportEventButton"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="32dp"
        android:onClick="reportEvent"
        android:text="Report  Event"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="@+id/updateUserIdButton"
        app:layout_constraintRight_toRightOf="@+id/updateUserIdButton"
        app:layout_constraintTop_toBottomOf="@+id/updateUserIdButton"/>

    <Button
        android:id="@+id/updateUserIdButton"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="32dp"
        android:onClick="updateUserId"
        android:text="Update userId"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="@+id/userIdTextView"
        app:layout_constraintRight_toRightOf="@+id/userIdTextView"
        app:layout_constraintTop_toBottomOf="@+id/userIdTextView"/>

</android.support.constraint.ConstraintLayout>
