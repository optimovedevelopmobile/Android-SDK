<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="com.optimove.sdk.optimove_sdk">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <service android:name="com.optimove.optimove_sdk.optipush.registration.OptimoveInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <service android:name="com.optimove.optimove_sdk.optipush.messaging.OptiPushMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <receiver android:name="com.optimove.optimove_sdk.optipush.messaging.NotificationInteractionReceiver">
            <intent-filter>
                <action android:name="com.optimove.optipush.NOTIFICATION_INTERACTION"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>
