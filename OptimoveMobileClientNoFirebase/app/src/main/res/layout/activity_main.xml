<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.optimove.sdk.optimovemobileclientnofirebase.MainActivity">

    <Button
        android:id="@+id/eventButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Event"
        android:onClick="sendEvent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/changeUserId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="changeUserId"
        android:text="userId is null"
        android:tag="n"
        app:layout_constraintEnd_toStartOf="@id/eventButton"
        app:layout_constraintStart_toEndOf="@id/eventButton"
        app:layout_constraintTop_toBottomOf="@id/eventButton"/>

</android.support.constraint.ConstraintLayout>
